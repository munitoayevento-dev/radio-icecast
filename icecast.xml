<!-- Solo escuchar localmente, nginx maneja lo pÃºblico -->
<listen-socket>
    <port>10000</port>
    <bind-address>127.0.0.1</bind-address>  <!-- SOLO LOCALHOST -->
</listen-socket>

<!-- Headers para proxy -->
<http-headers>
    <header name="X-Forwarded-For" value="trust" />
    <header name="Access-Control-Allow-Origin" value="*" />
</http-headers>

<!-- Aumentar timeouts -->
<limits>
    <clients>20</clients>
    <sources>2</sources>
    <client-timeout>300</client-timeout>    <!-- 5 minutos -->
    <source-timeout>300</source-timeout>    <!-- 5 minutos -->
    <header-timeout>120</header-timeout>    <!-- 2 minutos -->
</limits>
