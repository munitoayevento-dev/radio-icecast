<?xml version="1.0"?>
<icecast>
    <location>Radio Online</location>
    <admin>admin@turadio.com</admin>
    
    <limits>
        <clients>20</clients>
        <sources>2</sources>
        <client-timeout>300</client-timeout>
        <source-timeout>300</source-timeout>
    </limits>
    
    <authentication>
        <source-password>6fd9e8ea9ec3a18abadb6af33c6d7845</source-password>
        <relay-password>b6e5a092c78e5aabcae387bbf95f915a</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>3e0457a323fe43e917606a9d7096cfe6</admin-password>
    </authentication>
    
    <!-- ESCUCHAR LOCAL, puerto 10000 -->
    <hostname>127.0.0.1</hostname>
    <listen-socket>
        <port>10000</port>
        <bind-address>127.0.0.1</bind-address>
    </listen-socket>
    
    <paths>
        <logdir>/var/log/icecast</logdir>
        <webroot>/usr/share/icecast/web</webroot>
        <adminroot>/usr/share/icecast/web</adminroot>
        <alias source="/" destination="/status.xsl"/>
    </paths>
    
    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <loglevel>4</loglevel>  <!-- MÃ¡s verboso -->
    </logging>

    <security>
            <chroot>0</chroot>
            <changeowner>
                <user>icecast</user>
                <group>icecast</group>
            </changeowner>
    </security>
</icecast>

